server {
	errorpages			404 www/pages/errorpages/error_404.html
	errorpages			503 www/pages/errorpages/error_503.html
	listen				8080
	methodes			NONE
	server_names		littleCloud
	client_size			42
    autoindex			on
    timeoutCgi			10
    root www
	
	location / {
        root			www/
		methodes		GET POST DELETE
		redirection		HOME/index.html
		cgi_path		cgiFiles/
		cgi_extention	.cgi .py
	}
	location /about {
        root			www/
		methodes		GET
		redirection		ABOUT/index.html
	}
	location /cgi {
        root			www/
		methodes		GET
		redirection		CGI/index.html
	}
    location /favicon.ico {
        root			www/
        methodes		GET
        redirection		images/favicon.ico
    }
    location /arrow.png {
        root			www/
        methodes		GET
        redirection		images/arrow.png
    }
	location /homeStyles.css {
		root			www/
		methodes		GET
		redirection		HOME/styles.css
	}
	location /aboutStyles.css {
		root			www/
		methodes		GET
		redirection		ABOUT/styles.css
	}
	location /cgiStyles.css {
		root			www/
		methodes		GET
		redirection		CGI/styles.css
	}
	location /script.js {
        root			www/pages/
		methodes		GET
		redirection		www/js/script.js
	}
	location /cgi/listUpload {
		root			www/pages/
		methodes		GET
		redirection		cgiFiles/listUpload.py
		cgi_path		cgiFiles/
		cgi_extention	.py
	}
	location /cgi/download {
		root			www/pages/
		methodes		GET
		redirection		cgiFiles/getUpload.py
		cgi_path		cgiFiles/
		cgi_extention	.py
	}
	location /cgi/helloBash {
		root			www/pages/
		methodes		GET
		redirection		cgiFiles/helloWorld/helloBash.sh
		cgi_path		cgiFiles/
		cgi_extention	.sh .pl .php .py
	}
	location /cgi/helloPerl {
		root			www/pages/
		methodes		GET
		redirection		cgiFiles/helloWorld/helloPerl.pl
		cgi_path		cgiFiles/
		cgi_extention	.sh .pl .php .py
	}
	location /cgi/helloPhp {
		root			www/pages/
		methodes		GET
		redirection		cgiFiles/helloWorld/helloPhp.php
		cgi_path		cgiFiles/
		cgi_extention	.sh .pl .php .py
	}
	location /cgi/helloPython {
		root			www/pages/
		methodes		GET
		redirection		cgiFiles/helloWorld/helloPython.py
		cgi_path		cgiFiles/
		cgi_extention	.sh .pl .php .py
	}
	location /cgi/env {
		root			www/pages/
		methodes		GET
		redirection		cgiFiles/printEnv.py
		cgi_path		cgiFiles/
		cgi_extention	.py
	}
	location /cgi/post {
		root			www/pages/
		methodes		POST
		redirection		cgiFiles/post.py
		cgi_path		cgiFiles/
		cgi_extention	.py
	}

}